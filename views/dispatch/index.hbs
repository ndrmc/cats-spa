<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Issue Ticket (GIN)</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <a href="/dispatches/new" class="btn btn-primary pull-right">New Issue Ticket</a>
        </div>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="x_panel">
          <div class="x_title">
            <h2>Issue Ticket (GIN)</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
              <table class="table basic-datatable">
                <thead>
                  <tr>
                    <th>GIN</th>
                    <th>Requisition #</th>
                    <th>FDP</th>
                    <th>Dispatch Date</th>
                    <th>Posted</th>
                    <th>Tasks</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each dispatches}}
                    <tr>
                      <td>{{this.gin}}</td>
                      <td>{{this.requisitionNo}}</td>
                      <td>{{this.fdp}}</td>
                      <td>{{this.dispatchedDate}}</td>
                      <td>
                        {{#if this.draft}}
                          Draft
                        {{ else }}
                          Yes
                        {{/if}}
                      </td>
                      <td>
                        <a href="/dispatches/edit/{{this.id}}">Open</a>
                        {{#if this.draft}}
                           &middot; <a href="#">Post</a> &middot; <a href="#">Delete</a>
                        {{/if}}
                      </td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>