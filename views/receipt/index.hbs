    </div>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="x_panel">
          <div class="x_title">
            <h2>Stock Receipt</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
              <table class="table">
                <thead>
                  <tr>
                    <th>GRN No.</th>
                    <th>Receipt Date</th>
                    <th>Store</th>
                    <th>Received By</th>
                    <th>Posted</th>
                    <th>Tasks</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each receipts}}
                    <tr>
                      <td>{{this.grnNo}}</td>
                      <td>{{this.receivedDate}}</td>
                      <td>{{this.warehouseId}}</td>
                      <td>{{this.storekeeperName}}</td>
                      <td>
                        {{#if this.draft}}
                          Draft
                        {{ else }}
                          Yes
                        {{/if}}
                      </td>
                      <td>
                        {{#if this.draft}}
                          <a href="#">Open</a> | <a href="#">Post</a> | <a href="#">Cancel</a>
                        {{ else }}
                          <a href="#">Open</a>
                        {{/if}}
                      </td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
          </div>
        </div>

      </div>
    </div>
  </div>
